package integration.pipelines.declarative

import org.apache.commons.io.FileUtils

import java.nio.file.Paths

node("TestSlave") {
    def serverId = "Artifactory-1"
    def buildName = "declarative:conan test"
    def buildNumber = "7"

    stage "Configure Artifactory"
    rtServer(
            id: serverId,
            url: "${env.JENKINS_PLATFORM_URL}".replaceFirst('/*$', '')+'/artifactory',
            username: "${env.JENKINS_ARTIFACTORY_USERNAME}",
            password: "${env.JENKINS_ARTIFACTORY_PASSWORD}"
    )

    stage "Configure Conan Client"
    rtConanClient(
        id: "myConanClient"
    )

    rtConanRemote (
        name: "conanTestRemote",
        serverId: serverId,
        repo: "${CONAN_LOCAL}",
        clientId: "myConanClient"
    )

    stage "Conan Install"
    rtConanRun(
        clientId: "myConanClient",
        command: "install zlib/1.2.11@conan/stable --build missing",
        buildName: buildName,
        buildNumber: buildNumber
    )

    rtConanRun(
        clientId: "myConanClient",
        command: "upload zlib/1.2.11@conan/stable --all -r conanTestRemote --confirm",
        buildName: buildName,
        buildNumber: buildNumber
    )

    stage "Publish build info"
    rtPublishBuildInfo(
            serverId: serverId,
            buildName: buildName,
            buildNumber: buildNumber
    )
}
